                    st.divider()
                    
                    # Mapa de predicciones
                    st.write("**üó∫Ô∏è Mapa de Cuadrantes de Alto Riesgo**")
                    
                    if 'LATITUD' in df_pred_vehiculos.columns and 'LONGITUD' in df_pred_vehiculos.columns:
                        map_pred = df_pred_vehiculos[['CUADRANTE', 'PREDICCION_ROBOS_MES_N', 'LATITUD', 'LONGITUD', 'DISTRITO']].dropna()
                        
                        if len(map_pred) > 0 and HAS_FOLIUM:
                            center_lat = map_pred['LATITUD'].mean()
                            center_lon = map_pred['LONGITUD'].mean()
                            
                            m = folium.Map(location=[center_lat, center_lon], zoom_start=12, tiles='CartoDB dark_matter')
                            
                            # Normalizar valores de predicci√≥n para el gradiente de color
                            min_pred = map_pred['PREDICCION_ROBOS_MES_N'].min()
                            max_pred = map_pred['PREDICCION_ROBOS_MES_N'].max()
                            
                            for idx, row in map_pred.iterrows():
                                # Calcular intensidad normalizada (0-1)
                                intensity = (row['PREDICCION_ROBOS_MES_N'] - min_pred) / (max_pred - min_pred) if max_pred > min_pred else 0.5
                                
                                # Gradiente de calor: amarillo (bajo) -> naranja (medio) -> rojo oscuro (alto)
                                if intensity < 0.33:
                                    color = '#FFEB3B'  # Amarillo
                                    fill_color = '#FFF59D'
                                elif intensity < 0.66:
                                    color = '#FF9800'  # Naranja
                                    fill_color = '#FFB74D'
                                else:
                                    color = '#C62828'  # Rojo oscuro
                                    fill_color = '#E53935'
                                
                                popup_html = f"""
                                <div style="font-family: Arial; min-width: 180px; padding: 5px;">
                                    <h4 style="margin: 0; color: {color}; text-shadow: 1px 1px 2px black;">üöó Cuadrante {int(row['CUADRANTE'])}</h4>
                                    <hr style="margin: 5px 0;">
                                    <p style="margin: 3px 0;"><b>üî• Predicci√≥n:</b> {row['PREDICCION_ROBOS_MES_N']:.2f} robos</p>
                                    <p style="margin: 3px 0;"><b>üìç Distrito:</b> {row['DISTRITO']}</p>
                                    <p style="margin: 3px 0;"><b>üèÜ Ranking:</b> #{idx+1} de {len(map_pred)}</p>
                                    <p style="margin: 3px 0;"><b>‚ö†Ô∏è Nivel:</b> {'üî¥ Alto' if intensity > 0.66 else 'üü† Medio' if intensity > 0.33 else 'üü° Bajo'}</p>
                                </div>
                                """
                                
                                # Tama√±o proporcional a la intensidad
                                radius = 10 + (intensity * 15)
                                
                                # Crear badge de ranking
                                if idx == 0:
                                    rank_badge = "ü•á Top 1"
                                elif idx == 1:
                                    rank_badge = "ü•à Top 2"
                                elif idx == 2:
                                    rank_badge = "ü•â Top 3"
                                else:
                                    rank_badge = f"Top {idx+1}"
                                
                                folium.CircleMarker(
                                    location=[row['LATITUD'], row['LONGITUD']],
                                    radius=radius,
                                    popup=folium.Popup(popup_html, max_width=280),
                                    tooltip=f"{rank_badge} üöó Cuadrante {int(row['CUADRANTE'])} - {row['DISTRITO']}: {row['PREDICCION_ROBOS_MES_N']:.2f} robos",
                                    color=color,
                                    fill=True,
                                    fillColor=fill_color,
                                    fillOpacity=0.8,
                                    weight=2,
                                    opacity=0.9
                                ).add_to(m)
                            
                            st_folium(m, width=None, height=500)
                            st.success(f"‚úì Mostrando {len(map_pred)} cuadrantes de alto riesgo en el mapa")
                        else:
                            st.info("üìç No hay datos de ubicaci√≥n disponibles")
                    else:
                        st.info("üìç Las predicciones no tienen coordenadas disponibles")
                except FileNotFoundError:
                    st.warning("‚ö†Ô∏è Archivo de predicciones no disponible")
                    st.info("Para generar predicciones de Robos de Veh√≠culos, ejecuta el notebook `modeloVehiculo.ipynb`")
                except Exception as e:
                    st.error(f"Error al cargar predicciones: {str(e)}")
        
        # Mostrar resumen de predicciones disponibles
